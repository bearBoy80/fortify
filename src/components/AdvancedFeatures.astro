---
const features = [
	{
		title: "Data Security Analysis",
		description:
			"Real-time monitoring and analysis of your data security posture with advanced threat detection algorithms that continuously scan for vulnerabilities and unusual patterns.",
		stats: [
			{ label: "Detected Threats", value: "5,43k" },
			{ label: "Response Time", value: "125s" },
			{ label: "Compliance Status", value: "99%" },
		],
		image:
			"https://images.pexels.com/photos/5380642/pexels-photo-5380642.jpeg?auto=compress&cs=tinysrgb&w=600",
	},
	{
		title: "Risk Assessment & Visualization",
		description:
			"Comprehensive risk analysis and visualization tools to identify and mitigate potential threats before they impact your business. Prioritize security efforts based on actual risk data.",
		stats: [
			{ label: "Risk Score", value: "98%" },
			{ label: "Issues Resolved", value: "2.3k" },
			{ label: "Average Response", value: "5min" },
		],
		image:
			"https://images.pexels.com/photos/6963944/pexels-photo-6963944.jpeg?auto=compress&cs=tinysrgb&w=600",
	},
	{
		title: "Threat Intelligence Platform",
		description:
			"Stay ahead of emerging threats with our global threat intelligence network that continuously analyzes attack patterns and vulnerabilities across industries worldwide.",
		stats: [
			{ label: "Threat Database", value: "10M+" },
			{ label: "Daily Updates", value: "24k" },
			{ label: "Industry Coverage", value: "100+" },
		],
		image:
			"https://images.pexels.com/photos/5380659/pexels-photo-5380659.jpeg?auto=compress&cs=tinysrgb&w=600",
	},
];
---
<div class="py-32 bg-gradient-to-br from-secondary-50 to-primary-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-20">
      <div class="inline-block px-6 py-2 bg-secondary-100 text-secondary-600 rounded-full mb-4">
        Enterprise-Grade Protection
      </div>
      <h2 class="text-4xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">
        Advanced Security Features
      </h2>
      <p class="text-xl text-gray-700 max-w-2xl mx-auto">
        Protect your business with our cutting-edge security features and real-time monitoring capabilities that keep your data safe around the clock.
      </p>
    </div>

    <div class="space-y-32">
      {features.map((feature, index) => (
        <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} items-center gap-12`}>
          <div class="flex-1 space-y-8">
            <h3 class="text-3xl font-bold">{feature.title}</h3>
            <p class="text-lg text-gray-600 leading-relaxed">{feature.description}</p>
            
            <div class="grid grid-cols-3 gap-6">
              {feature.stats.map(stat => (
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-4 shadow-lg hover:shadow-xl transition-all duration-300">
                  <div class="text-2xl font-bold text-primary-500">{stat.value}</div>
                  <div class="text-sm text-gray-600">{stat.label}</div>
                </div>
              ))}
            </div>

            <button class="btn btn-lg bg-white hover:bg-gray-50 text-primary-500 border-2 border-primary-200 rounded-full px-8 shadow-lg hover:shadow-primary-100/50 hover:scale-105 transition-all duration-300">
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>

          <div class="flex-1">
            <div class="bg-white rounded-3xl shadow-xl p-4 transform hover:scale-105 transition-all duration-300 overflow-hidden">
              <img 
                src={feature.image} 
                alt={feature.title}
                class="w-full h-auto rounded-2xl object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>