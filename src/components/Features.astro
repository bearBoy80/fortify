---
const features = [
	{
		title: "Advanced Threat Detection",
		description:
			"Our AI-powered system continuously monitors your network and data environments for suspicious activities, identifying potential threats before they can cause damage.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`,
		stats: "5,430+ threats detected monthly",
		bgColor: "bg-blue-100",
		iconBg: "bg-blue-500",
		badgeBg: "bg-gradient-to-r from-blue-400 to-blue-600",
	},
	{
		title: "Real-time Analytics Dashboard",
		description:
			"Get instant insights with our powerful analytics dashboard and make data-driven decisions. Monitor security metrics and visualize trends in real-time.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>`,
		stats: "125s average response time",
		bgColor: "bg-purple-100",
		iconBg: "bg-purple-500",
		badgeBg: "bg-gradient-to-r from-purple-400 to-purple-600",
	},
	{
		title: "Automated Incident Response",
		description:
			"In the event of a security incident, our automated response system takes immediate action to contain the threat, minimize damage, and notify your security team.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>`,
		stats: "99.9% threat containment rate",
		bgColor: "bg-amber-100",
		iconBg: "bg-amber-500",
		badgeBg: "bg-gradient-to-r from-amber-400 to-orange-500",
	},
	{
		title: "Data Encryption",
		description:
			"Protect your sensitive data with our enterprise-grade encryption protocols, ensuring that your information remains secure both in transit and at rest.",
		icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
    </svg>`,
		stats: "Military-grade encryption",
		bgColor: "bg-green-100",
		iconBg: "bg-green-500",
		badgeBg: "bg-gradient-to-r from-green-400 to-green-600",
	},
];
---
<div class="py-20 sm:py-24 md:py-28 lg:py-32 bg-gradient-to-b from-white to-primary-50" id="features">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 sm:mb-16 md:mb-20">
      <div class="inline-block px-6 py-2 bg-primary-100 text-primary-600 rounded-full mb-4">
        Core Features
      </div>
      <h2 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6 bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">
        How Fortify Security Works
      </h2>
      <p class="text-lg sm:text-xl text-gray-700 max-w-2xl mx-auto">
        Your Trusted Partner in Data Protection with Cutting-Edge Solutions for Comprehensive Data Security.
      </p>
    </div>
    
    <!-- Grid layout - 1 column on mobile, 2 columns on medium screens, 4 columns on large screens -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
      {features.map(feature => (
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden h-full flex flex-col">
          <!-- Card header with colored accent -->
          <div class="h-2 w-full bg-gradient-to-r from-primary-400 to-primary-600"></div>
          
          <!-- Card content -->
          <div class="p-6 sm:p-7 flex flex-col h-full">
            <!-- Icon and title -->
            <div class="flex items-start gap-4 mb-4">
              <div class={`w-14 h-14 rounded-xl flex items-center justify-center ${feature.iconBg} text-white shrink-0`}>
                <Fragment set:html={feature.icon} />
              </div>
              <h3 class="text-xl sm:text-2xl font-bold">{feature.title}</h3>
            </div>
            
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed mb-6 flex-grow">{feature.description}</p>
            
            <!-- Stats badge - pushed to bottom with flex-grow above -->
            <div class="mt-auto">
              <div class={`inline-block w-full text-center px-4 py-3 rounded-full text-white font-medium ${feature.badgeBg}`}>
                {feature.stats}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 flex justify-center">
      <a href="#how-it-works" class="btn btn-lg bg-primary-500 hover:bg-primary-600 text-white border-0 rounded-full px-8 shadow-lg hover:shadow-primary-200/50 hover:scale-105 transition-all duration-300">
        Learn How It Works
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div>