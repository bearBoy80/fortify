---
const stats = [
	{ value: "99.9%", label: "Uptime Guarantee" },
	{ value: "5,430+", label: "Threats Detected Daily" },
	{ value: "125s", label: "Average Response Time" },
	{ value: "10,000+", label: "Companies Protected" },
];
---
<div class="py-20 bg-gradient-to-r from-primary-500 to-secondary-500">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
      {stats.map(stat => (
        <div class="bg-white/10 backdrop-blur-md rounded-3xl p-8 hover:bg-white/20 transition-all duration-300">
          <div class="text-5xl font-bold text-white mb-2">{stat.value}</div>
          <div class="text-white/80">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</div>