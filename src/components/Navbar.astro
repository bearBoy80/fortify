<div class="fixed top-0 left-0 right-0 bg-white/90 backdrop-blur-md z-50 border-b border-primary-100">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex h-20 items-center justify-between">
      <div class="flex-1 flex items-center">
        <a href="/" class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500">
          Fortify
        </a>
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex ml-12 space-x-8">
          <a href="#features" class="text-gray-600 hover:text-primary-500 transition-colors">Features</a>
          <a href="#how-it-works" class="text-gray-600 hover:text-primary-500 transition-colors">How It Works</a>
          <a href="#pricing" class="text-gray-600 hover:text-primary-500 transition-colors">Pricing</a>
          <a href="#testimonials" class="text-gray-600 hover:text-primary-500 transition-colors">Testimonials</a>
          <a href="#faq" class="text-gray-600 hover:text-primary-500 transition-colors">FAQ</a>
        </nav>
      </div>
      
      <!-- Desktop CTA Buttons -->
      <div class="hidden md:flex items-center gap-4">
        <a href="/login" class="btn bg-white hover:bg-gray-50 text-primary-500 border-2 border-primary-200 rounded-full px-6 hover:scale-105 transition-all duration-300">
          Log in
        </a>
        <button class="btn bg-primary-500 hover:bg-primary-600 text-white border-0 rounded-full px-6 shadow-lg hover:shadow-primary-200/50 hover:scale-105 transition-all duration-300">
          Get Started
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="menu-toggle" class="p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-open">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" id="menu-close">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu (Hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-primary-100 shadow-lg">
    <div class="px-4 py-6 space-y-4">
      <a href="#features" class="block text-lg font-medium text-gray-600 hover:text-primary-500 transition-colors py-2">
        Features
      </a>
      <a href="#how-it-works" class="block text-lg font-medium text-gray-600 hover:text-primary-500 transition-colors py-2">
        How It Works
      </a>
      <a href="#pricing" class="block text-lg font-medium text-gray-600 hover:text-primary-500 transition-colors py-2">
        Pricing
      </a>
      <a href="#testimonials" class="block text-lg font-medium text-gray-600 hover:text-primary-500 transition-colors py-2">
        Testimonials
      </a>
      <a href="#faq" class="block text-lg font-medium text-gray-600 hover:text-primary-500 transition-colors py-2">
        FAQ
      </a>
      
      <div class="pt-4 flex flex-col gap-4">
        <a href="/login" class="btn w-full justify-center bg-white hover:bg-gray-50 text-primary-500 border-2 border-primary-200 rounded-full px-6 hover:scale-105 transition-all duration-300">
          Log in
        </a>
        <button class="btn w-full justify-center bg-primary-500 hover:bg-primary-600 text-white border-0 rounded-full px-6 shadow-lg hover:shadow-primary-200/50 hover:scale-105 transition-all duration-300">
          Get Started
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuOpen = document.getElementById('menu-open');
    const menuClose = document.getElementById('menu-close');
    
    if (menuToggle && mobileMenu && menuOpen && menuClose) {
      menuToggle.addEventListener('click', () => {
        // Toggle menu visibility
        mobileMenu.classList.toggle('hidden');
        
        // Toggle icon visibility
        menuOpen.classList.toggle('hidden');
        menuClose.classList.toggle('hidden');
      });
      
      // Close menu when clicking a link
      const menuLinks = mobileMenu.querySelectorAll('a');
      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          menuOpen.classList.remove('hidden');
          menuClose.classList.add('hidden');
        });
      });
    }
  });
</script>